<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@android:color/holo_blue_light"
    tools:context="in.ac.iiitd.psingh.mc16.objectivequiz.QuizActivity">


    <TextView
        android:id="@+id/textViewer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:textSize="22sp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/TrueButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trueText"
            android:drawableLeft="@drawable/arrow_left"
            android:onClick="Correct"
            android:textStyle="bold"
            android:backgroundTint="@android:color/holo_orange_light"
            />
        <Button
            android:id="@+id/FalseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/falseText"
            android:drawableRight="@drawable/arrow_right"
            android:onClick="Incorrect"
            android:textStyle="bold"

            android:backgroundTint="@android:color/holo_orange_light"
        />
    </LinearLayout>
    <Button
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nextText"
        android:onClick="changeMessage"
        android:textStyle="bold"
        android:backgroundTint="@android:color/holo_orange_light"
        />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/HintButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hintText"
            android:drawableLeft="@drawable/arrow_left"
            android:onClick="Hint"
            android:textStyle="bold"
            android:backgroundTint="@android:color/holo_orange_light"
            />
        <Button
            android:id="@+id/CheatButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cheatText"
            android:drawableRight="@drawable/arrow_right"
            android:onClick="Cheat"
            android:textStyle="bold"
            android:backgroundTint="@android:color/holo_orange_light"
            />
    </LinearLayout>





</LinearLayout>
